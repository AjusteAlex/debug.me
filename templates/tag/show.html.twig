{% extends 'base.html.twig' %}

{% block title %}Détails d'un Tag
{% endblock %}

{% block body %}
	<div class="w-full flex justify-center content-center flex-col rounded pt-2">
		<div class="flex content-center flex-row justify-between m-4">
			<a href="{{ path('app_tag_index') }}" class="bg-transparent hover:bg-gradient-to-r from-pink to-purple text-primary-color font-semibold hover:text-white-transparent py-2 px-4 border border-primary-color hover:border-none rounded" style="overflow: hidden;">
				Retour
			</a>
		</div>
	</div>
	<div class="flex justify-center rounded">
		<div class="rounded shadow-lg w-1/3 p-8 max-h-screen">
			<div class="font-bold text-xl mb-8">Détail du tag</div>
			<div class="flex flex-col">
				<span class="font-semibold">Nom du tag</span>
				<span>{{ tag.name }}</span>
			</div>

			<div class="mt-6 space-x-2 flex flex-row">
				<a href="{{ path('app_tag_edit', {'id': tag.id}) }}" class="bg-transparent hover:bg-gradient-to-r from-pink to-purple text-primary-color font-semibold hover:text-white-transparent py-2 px-4 border border-primary-color hover:border-none rounded" style="overflow: hidden;">
					Modifier
				</a>
				{{ include('tag/_delete_form.html.twig') }}
			</div>
		</div>
	</div>

{% endblock %}
