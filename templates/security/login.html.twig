{% extends 'base.html.twig' %}

{% block title %}Hello SecurityController!
{% endblock %}

{% block body %}
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}
	<div class="bg-cover bg-no-repeat bg-login-pattern bg-center grid place-items-center h-screen rounded">
		<div class="rounded shadow-lg w-1/3 p-8 max-h-screen">
			<div class="font-bold text-xl mb-8">Connexion</div>
			<form action="{{ path('app_login') }}" method="post">
				<div class="flex flex-col mb-2">
					<label for="username">Email</label>
					<input type="text" id="username" name="_username" value="{{ last_username }}"/>
				</div>
				<div class="flex flex-col">
					<label for="password">Mot de passe</label>
					<input type="password" id="password" name="_password"/>
				</div>
				<input
				type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<button type="submit" class="bg-transparent hover:bg-gradient-to-r from-pink to-purple text-primary-color font-semibold hover:text-white-transparent py-2 px-4 border border-primary-color hover:border-none rounded mt-8">Se connecter</button>
			</form>
		</div>
	</div>
{% endblock %}
